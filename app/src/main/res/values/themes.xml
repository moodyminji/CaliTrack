<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base Material 3 Theme -->
    <style name="Base.Theme.CaliTrack" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/emerald_600</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorPrimaryContainer">@color/emerald_50</item>

        <!-- Secondary colors -->
        <item name="colorSecondary">@color/orange_600</item>
        <item name="colorOnSecondary">@android:color/white</item>

        <!-- Background colors -->
        <item name="android:colorBackground">@android:color/white</item>
        <item name="colorSurface">@android:color/white</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- Typography -->
        <item name="textAppearanceHeadline1">@style/TextAppearance.CaliTrack.Headline1</item>
        <item name="textAppearanceBody1">@style/TextAppearance.CaliTrack.Body1</item>

        <!-- Material Components -->
        <item name="materialCardViewStyle">@style/Widget.CaliTrack.CardView</item>
        <item name="bottomNavigationStyle">@style/Widget.CaliTrack.BottomNavigationView</item>
    </style>

    <style name="Theme.CaliTrack" parent="Base.Theme.CaliTrack" />

    <!-- Typography Styles -->
    <style name="TextAppearance.CaliTrack.Headline1" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/gray_900</item>
    </style>

    <style name="TextAppearance.CaliTrack.Body1" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/gray_700</item>
    </style>

    <!-- Card Style -->
    <style name="Widget.CaliTrack.CardView" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">20dp</item>
        <item name="cardElevation">2dp</item>
        <item name="cardBackgroundColor">@android:color/white</item>
    </style>

    <!-- Bottom Navigation Style -->
    <style name="Widget.CaliTrack.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="itemIconTint">@color/bottom_nav_color</item>
        <item name="itemTextColor">@color/bottom_nav_color</item>
        <item name="itemTextAppearanceActive">@style/TextAppearance.CaliTrack.BottomNav.Active</item>
        <item name="itemTextAppearanceInactive">@style/TextAppearance.CaliTrack.BottomNav.Inactive</item>
        <item name="labelVisibilityMode">labeled</item>
    </style>

    <style name="TextAppearance.CaliTrack.BottomNav.Active" parent="TextAppearance.Material3.LabelSmall">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.CaliTrack.BottomNav.Inactive" parent="TextAppearance.Material3.LabelSmall">
        <item name="android:textSize">12sp</item>
    </style>

    <!-- Custom Indicator Style for Bottom Nav -->
    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@android:color/transparent</item>
    </style>
</resources>