<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Activity Log Summary Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="1dp"
            app:cardBackgroundColor="@android:color/white"
            android:layout_marginBottom="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp">

                <!-- Calendar Icon -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/emerald_50"
                    android:layout_marginEnd="16dp"
                    android:layout_gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_calendar"
                        app:tint="@color/emerald_600"/>
                </com.google.android.material.card.MaterialCardView>

                <!-- Text Content -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Your Activity Log"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/gray_900"
                        android:layout_marginBottom="2dp"/>

                    <TextView
                        android:id="@+id/daysTrackedText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5 days tracked"
                        android:textSize="13sp"
                        android:textColor="@color/gray_500"/>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- History List Container -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/historyRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"/>

        <!-- Empty State (shown when no history) -->
        <LinearLayout
            android:id="@+id/emptyStateLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="40dp"
            android:visibility="gone">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/ic_empty_history"
                app:tint="@color/gray_400"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No History Yet"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/gray_700"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start tracking your meals and workouts to see your history here"
                android:textSize="14sp"
                android:textColor="@color/gray_500"
                android:gravity="center"
                android:layout_marginBottom="24dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/startTrackingButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start Tracking"
                android:textColor="@android:color/white"
                app:backgroundTint="@color/emerald_600"
                app:cornerRadius="12dp"
                android:paddingStart="32dp"
                android:paddingEnd="32dp"/>
        </LinearLayout>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>