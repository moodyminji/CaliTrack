<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Chat Assistant Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@android:color/white"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp">

                <!-- Assistant Icon -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/assistant_bg"
                    android:layout_marginEnd="12dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_assistant"
                        app:tint="@color/gray_700"/>
                </com.google.android.material.card.MaterialCardView>

                <!-- Assistant Message -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/greetingText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Hello ! I'm your health assistant. How can I help you today? You can ask me about tracking your health metrics, reviewing your history, or getting health advice."
                        android:textSize="14sp"
                        android:textColor="@color/gray_800"
                        android:lineSpacingExtra="2dp"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="04:38 PM"
                        android:textSize="11sp"
                        android:textColor="@color/gray_500"/>
                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Chat Input Area -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="28dp"
            app:cardElevation="1dp"
            app:cardBackgroundColor="@android:color/white"
            android:layout_marginBottom="24dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/chatInput"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_toStartOf="@id/sendButton"
                    android:background="@android:color/transparent"
                    android:hint="Ask about your health..."
                    android:textColorHint="@color/gray_400"
                    android:textColor="@color/gray_800"
                    android:textSize="15sp"
                    android:paddingStart="20dp"
                    android:paddingEnd="8dp"
                    android:inputType="textCapSentences|textMultiLine"
                    android:maxLines="3"/>

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/sendButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="4dp"
                    app:fabCustomSize="40dp"
                    app:maxImageSize="20dp"
                    app:srcCompat="@drawable/ic_send"
                    app:tint="@android:color/white"
                    app:backgroundTint="@color/emerald_500"
                    app:elevation="0dp"
                    app:borderWidth="0dp"/>
            </RelativeLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Today's Work Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Title -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Today's Work"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/gray_900"
                    android:layout_marginBottom="20dp"/>

                <!-- Calories Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="@color/orange_light"
                        android:layout_marginEnd="12dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_flame"
                            app:tint="@color/orange_600"/>
                    </com.google.android.material.card.MaterialCardView>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Calories"
                            android:textSize="13sp"
                            android:textColor="@color/gray_600"/>

                        <TextView
                            android:id="@+id/netCaloriesText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Net: 0 / 1500"
                            android:textSize="12sp"
                            android:textColor="@color/gray_500"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/caloriesValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="789"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="@color/gray_900"
                        android:layout_gravity="center_vertical"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="consumed"
                        android:textSize="12sp"
                        android:textColor="@color/gray_500"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="4dp"/>
                </LinearLayout>

                <!-- Progress Bar -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:layout_marginBottom="12dp">

                    <ProgressBar
                        android:id="@+id/backgroundProgress"
                        android:layout_width="match_parent"
                        android:layout_height="24dp"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:progressDrawable="@drawable/progress_background"
                        android:progress="100"/>

                    <ProgressBar
                        android:id="@+id/consumedProgress"
                        android:layout_width="match_parent"
                        android:layout_height="24dp"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:progressDrawable="@drawable/progress_consumed"
                        android:progress="52"/>

                    <ProgressBar
                        android:id="@+id/burnedProgress"
                        android:layout_width="match_parent"
                        android:layout_height="24dp"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:progressDrawable="@drawable/progress_burned"
                        android:progress="16"/>
                </RelativeLayout>

                <!-- Legend -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="20dp">

                    <View
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:background="@drawable/circle_orange"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="6dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Consumed"
                        android:textSize="11sp"
                        android:textColor="@color/gray_600"
                        android:layout_marginEnd="16dp"/>

                    <View
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:background="@drawable/circle_emerald"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="6dp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Burned"
                        android:textSize="11sp"
                        android:textColor="@color/gray_600"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="37%"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:textColor="@color/gray_600"/>
                </LinearLayout>

                <!-- Exercise Summary -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/bg_light_emerald"
                    android:padding="12dp"
                    android:layout_marginBottom="20dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_activity"
                        app:tint="@color/emerald_600"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="You burned "
                        android:textSize="13sp"
                        android:textColor="@color/gray_700"/>

                    <TextView
                        android:id="@+id/burnedCalories"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="234"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:textColor="@color/emerald_600"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" calories through exercise"
                        android:textSize="13sp"
                        android:textColor="@color/gray_700"/>
                </LinearLayout>

                <!-- Macros -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Protein"
                            android:textSize="12sp"
                            android:textColor="@color/gray_500"
                            android:layout_marginBottom="4dp"/>

                        <TextView
                            android:id="@+id/proteinValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="45g"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/gray_900"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Carbs"
                            android:textSize="12sp"
                            android:textColor="@color/gray_500"
                            android:layout_marginBottom="4dp"/>

                        <TextView
                            android:id="@+id/carbsValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="98g"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/gray_900"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Fats"
                            android:textSize="12sp"
                            android:textColor="@color/gray_500"
                            android:layout_marginBottom="4dp"/>

                        <TextView
                            android:id="@+id/fatsValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="32g"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/gray_900"/>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>