<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="1dp"
    app:cardBackgroundColor="@android:color/white"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp">

        <!-- Activity Icon -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/iconCard"
            android:layout_width="44dp"
            android:layout_height="44dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            android:layout_marginEnd="16dp"
            android:layout_gravity="center_vertical">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_trending_down"
                app:tint="@color/emerald_600"/>
        </com.google.android.material.card.MaterialCardView>

        <!-- Content Section -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">

            <!-- Date -->
            <TextView
                android:id="@+id/dateText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thursday, Nov 13"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/gray_900"
                android:layout_marginBottom="4dp"/>

            <!-- Calorie Details -->
            <TextView
                android:id="@+id/calorieDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="889 net calories â€¢ 345 burned"
                android:textSize="12sp"
                android:textColor="@color/gray_500"/>
        </LinearLayout>

        <!-- Right Section: Calories & Status -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="end"
            android:layout_gravity="center_vertical">

            <!-- Total Calories -->
            <TextView
                android:id="@+id/totalCalories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1234"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/gray_900"
                android:layout_marginBottom="2dp"/>

            <!-- Status -->
            <TextView
                android:id="@+id/statusText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Under goal"
                android:textSize="11sp"
                android:textColor="@color/gray_500"/>
        </LinearLayout>

        <!-- Chevron Icon -->
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_chevron_right"
            app:tint="@color/gray_400"
            android:layout_marginStart="8dp"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>